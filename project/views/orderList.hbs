<h3> {{vi}} </h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Total Price</th>
            <th>Costumer Name</th> 
            <th>Phone</th>
            <th>delivery</th>    
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.orderID}}</td>
            <td>{{this.totalPrice}}</td>
            <td>{{this.costumerName}}</td>
            <td>{{this.phone}}</td>
            <td> {{this.delivery}}</td>
            <td>{{this.address}}</td>
            <td>
                <a href="/order/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/order/deleteOrder/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>