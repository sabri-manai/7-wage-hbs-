<h3>{{viewTi}}</h3>
        
<form action="/home/product" method="POST" autocomplete="off">
    <input type="hidden" name="id" value="{{product.id}}">
    <div class="form-group">
        <label>Product ID</label>
        <input type="text" class="form-control" name="productID" placeholder="Product ID" value="{{product.productID}}">
        <div class="text-danger">
            {{product.productIDError}}</div>
    </div> 
     <div class="form-row">
        <div class="form-group col-md-6">
            <label>Item</label>
            <input type="text" class="form-control" name="item" placeholder="Item" value="{{product.item}}">
        </div>

        <div class="form-group col-md-6">
            <label>Color</label>
            <input type="text" class="form-control" name="color" placeholder="color" value="{{product.color}}">
        </div>
    </div>
      <div class="form-row">
        <div class="form-group col-md-6">
            <label>Quantity</label>
            <input type="text" class="form-control" name="quantity" placeholder="Quantity" value="{{product.quantity}}">
        </div>
        <div class="form-group col-md-6">
            <label>Size</label>
            <input type="text" class="form-control" name="size" placeholder="Size" value="{{product.size}}">
        </div>
    </div>
 <div class="form-row">
        <div class="form-group col-md-6">
            <label>Gender</label>
            <input type="text" class="form-control" name="gender" placeholder="Gender" value="{{product.gender}}">
        </div>
        <div class="form-group col-md-6">
            <label>Price(DNT)</label>
            <input type="text" class="form-control" name="price" placeholder="Price(DNT)" value="{{product.price}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-dark"><i class="fa fa-plus-square"></i> Submit</button>
    </div>
</form>
